#!/usr/bin/bash

if [[ $(hostname) == 'mihranDesktop' ]]
then
  cd $HOME/Pictures/Backgrounds

  CHOICE=/tmp/background-choice
  
  kitty -- ranger --choosefile=$CHOICE || exit 1
  
  pic=$(cat $CHOICE)
  
  feh --no-fehbg --bg-fill $pic
else
  cd $HOME/Pictures/Backgrounds
  
  kitty -- ranger --choosefile=chosenpic || exit 1
  
  pic=$(cat chosenpic)
  
  rm -f chosenpic
  
  multilockscreen --update $pic
  multilockscreen --wall
  
  dunstify "Wallpaper Updated!"
fi
