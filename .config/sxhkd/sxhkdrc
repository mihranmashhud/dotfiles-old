
### WM Independent Hotkeys ###

## Print Screen
Print
  maim ~/Pictures/Screenshots/$(date +%s).png && dunstify "Screen Captured"

## Lock the screen
alt + shift + x
  loginctl lock-session

## Lock the screen and suspend
alt + shift + s
  systemctl suspend

## Hibernate for max power savings
alt + shift + h
  systemctl hibernate

## Give me another wallpaper
alt + r
  ~/scripts/random-wallpaper

## Let me choose another wallpaper
alt + w
  ~/scripts/choose-wallpaper

## Open Wifi rofi menu
alt + shift + w
  ~/scripts/networkmanager_dmenu

## Open The Vivaldi browser
super + v
  /usr/bin/vivaldi-stable

## Open the terminal emulator
super + Return
  /usr/bin/kitty -d "$(~/scripts/lastcwd)"

## Open the program launcher
super + @space
  rofi -modi drun,window -show drun

## Reload sxhkd config files
super + Escape
  pkill -USR1 -x sxhkd

### Bspwm hotkeys ###

## Quit/Restart bspwm
super + shift + {q,r}
  {bspc quit, bspc wm -r}

## Close window or kill the process
super + {_,shift + }w
  bspc node -{c,k}

## Alternate between the tiled and monocle layout
super + m
  bspc desktop -l next

## Send the newest marked node to the newest preselected node
super + y
  bspc node newest.marked.local -n newest.!automatic.local

## Swap the current node and the biggest node
super + g
  bspc node -s biggest


## State & Flags ##

## Set the window state (tiled, psuedo tiled, floating, fullscreen)
super + {t,shift + t,f,shift + f}
  bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

## Set the node flags (marked, locked, sticky, private)
super + ctrl + {m,x,y,z}
  bspc node -g {marked,locked,sticky,private}

## Focus & Swap ##

## Focus the node in the given direction
super + {_,shift + }{h,j,k,l}
  bspc node -{f,s} {west,south,north,east}

## Focus node in the given direction via arrow keys
super + {_,shift + }{Left,Down,Up,Right}
  bspc node -{f,s} {west,south,north,east}

## Focus the node for the given path jump (parent, brother, first, second)
super + {p,b,comma,period}
  bspc node -f @{parent,brother,first,second}

## Focus the next/previous node in the current desktop
super + {_,shift + }c
  bspc node -f {next,prev}.local

## Focus the next/previous desktop in the current monitor
super + bracket{left,right}
  bspc desktop -f {prev,next}.local

## Focus the last node/desktop
super + {grave,Tab}
  bspc {node,desktop} -f last

## Focus the older or newer node in the focus history
super + {o,i}
  bspc wm -h off; \
  bspc node {older,newer} -f; \
  bspc wm -h on

## Focus or send to the given desktop
super + {_,shift + }{1-9,0}
  bspc {desktop -f,node -d} '^{1-9,10}'


## Preselect ##

## Preselect the direction
super + ctrl + {h,j,k,l}
  bspc node -p {west,south,north,east}

super + ctrl + {Left,Down,Up,Right}
  bspc node -p {west,south,north,east}

## Preselect the ratio
super + ctrl + {1-9}
  bspc node -o 0.{1-9}

## Cancel the preselection for the focused node
super + ctrl + space
  bspc node -p cancel

## Cancel the preselection for the focused desktop
super + ctrl + shift + space
  bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

## Move the focused window to the preselection
super + ctrl + p
  bspc node -n 'last.!automatic.local'


## Move & Resize ##

## Expand a window by moving one of its side outward
super + alt + {h,j,k,l}
  bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

## Expand window via arrow keys
super + alt + {Left,Down,Up,Right}
  bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

## Contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
  bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

## Contract a window via arrow keys
super + alt + shift + {Left,Down,Up,Right}
  bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}


### FUNCTION KEYS ###

## Toggle Mute
XF86AudioMute
  if [[ $(amixer get Master | egrep 'Playback.*?\[o' | egrep -o '\[o.+\]') == '[on]' ]]; then amixer set Master mute; else amixer set Master unmute; fi

## Lower Volume by 4% 
XF86AudioLowerVolume
  amixer sset Master 4-

## Raise Volume by 4%
XF86AudioRaiseVolume
  amixer sset Master 4+

## Decrease Brightness by 10
XF86MonBrightnessDown
  xbacklight -dec 10

## Increase Brightness by 10
XF86MonBrightnessUp
  xbacklight -inc 10

